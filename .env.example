# Librarian Agent Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Anthropic API Key (required for production mode)
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# OPTIONAL - API Keys
# =============================================================================

# OpenAI API Key (optional, for image captioning with Docling)
# OPENAI_API_KEY=sk-...

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Claude model to use
MODEL_ID=claude-sonnet-4-20250514

# Maximum tokens for responses
MAX_TOKENS=4000

# =============================================================================
# CACHING
# =============================================================================

# Cache TTL in seconds (default: 5 minutes)
CACHE_TTL_SECONDS=300

# Session max age in seconds (default: 1 hour)
SESSION_MAX_AGE_SECONDS=3600

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=9600

# Frontend port
FRONTEND_PORT=3000

# Environment (development or production)
ENVIRONMENT=development

# =============================================================================
# SECURITY
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or console)
LOG_FORMAT=console

# =============================================================================
# DATABASE CONNECTIONS (Future)
# =============================================================================

# ChromaDB URL
# CHROMADB_URL=http://localhost:8000

# MongoDB URL
# MONGODB_URL=mongodb://localhost:27017/librarian

# Neo4j URL
# NEO4J_URL=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password

# PostgreSQL/Neon URL
# POSTGRES_URL=postgresql://user:password@localhost:5432/librarian

# =============================================================================
# SKILLS
# =============================================================================

# Base path for skills files
SKILLS_BASE_PATH=./skills

# Optional: Universal Memory Bridge Path
# BRIDGE_PATH=/path/to/universal-memory-bridge
