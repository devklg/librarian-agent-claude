# Dockerfile for Librarian Agent API (Part 2)
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy Part 1 (Core Agent) dependencies
COPY part1_core_agent/requirements.txt /app/part1_requirements.txt

# Copy Part 2 (API Layer) dependencies
COPY part2_api_layer/requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r /app/part1_requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy Part 1 core agent files
COPY part1_core_agent /app/part1_core_agent

# Copy Part 2 API layer files
COPY part2_api_layer /app/part2_api_layer

# Set working directory to API layer
WORKDIR /app/part2_api_layer

# Add part1 to Python path
ENV PYTHONPATH=/app/part1_core_agent:$PYTHONPATH

# Expose API port
EXPOSE 9600

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:9600/health')" || exit 1

# Run the API server
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "9600"]
